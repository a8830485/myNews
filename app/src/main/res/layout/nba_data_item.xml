<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/nba_data_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@android:color/darker_gray">
        <TextView
            android:id="@+id/nba_data_title_union"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="东部"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/nba_data_title_win"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="胜"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/nba_data_title_lose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="负"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/nba_data_title_percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="胜率"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/nba_data_title_diff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="胜场差"
            android:textColor="@android:color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/nba_data_item_badge"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/nba_data_item_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="骑士"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <TextView
            android:id="@+id/nba_data_item_win"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="35"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/nba_data_item_lose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="15"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/nba_data_item_percent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="70%"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/nba_data_item_diff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0.0"
            android:textColor="@android:color/black"/>
    </LinearLayout>
</LinearLayout>